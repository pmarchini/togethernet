<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_weight="0.58"
            android:src="@drawable/cityslide"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="Spreco di connesioni Wifi"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="Ti Ã¨ mai capitato, cercando un WI-FI con lo smartphone, di essere circondato da un gran numero di connesioni internet private e non poterle utilizzare? sapevi che tutte queste reti non vengono mai sfruttate a pieno?"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>